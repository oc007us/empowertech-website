---
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  heroLabel: string;
  heroTitle: string;
  heroSubtitle?: string;
  heroImage?: string;
  ogImage?: string;
}

const { title, description, heroLabel, heroTitle, heroSubtitle, heroImage, ogImage } = Astro.props;
---

<Layout title={title} description={description} ogImage={ogImage}>
  <Navbar />
  <main>
    <PageHero label={heroLabel} title={heroTitle} subtitle={heroSubtitle} heroImage={heroImage} />
    <slot />
  </main>
  <Footer />
</Layout>
