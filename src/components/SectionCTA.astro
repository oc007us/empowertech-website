---
interface Props {
  title?: string;
  subtitle?: string;
  primaryText?: string;
  primaryHref?: string;
  secondaryText?: string;
  secondaryHref?: string;
}

const {
  title = 'Ready to see it in action?',
  subtitle = 'Request a demo to explore how Empower AI can transform your enterprise.',
  primaryText = 'Request a Demo',
  primaryHref = 'mailto:info@empowertech.ai',
  secondaryText,
  secondaryHref,
} = Astro.props;
---

<section class="section-cta">
  <div class="container">
    <div class="cta-box fade-in">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-subtitle">{subtitle}</p>
      <div class="cta-actions">
        <a href={primaryHref} class="btn btn-primary">{primaryText}</a>
        {secondaryText && secondaryHref && (
          <a href={secondaryHref} class="btn btn-secondary">{secondaryText}</a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .section-cta {
    padding-block: var(--space-16);
  }

  .cta-box {
    text-align: center;
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-16) var(--space-8);
  }

  .cta-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }

  .cta-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    max-width: 560px;
    margin-inline: auto;
    line-height: var(--line-height-relaxed);
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .cta-box {
      padding: var(--space-10) var(--space-6);
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
