---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  width?: number;
  quality?: number;
  class?: string;
}

const { src, alt, width = 900, quality = 80, class: className = '' } = Astro.props;
---

<div class:list={['inverted-image', className]}>
  <Image src={src} alt={alt} width={width} quality={quality} />
</div>

<style>
  .inverted-image img {
    filter: invert(1) hue-rotate(180deg);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    width: 100%;
    height: auto;
  }
</style>
