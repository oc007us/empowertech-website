---
interface Props {
  height?: number;
  showTagline?: boolean;
}

const { height = 36 } = Astro.props;
---

<div class="logo" style={`--logo-h: ${height}px`}>
  <picture>
    <source srcset="/images/enpraxis-logo.webp" type="image/webp" />
    <img
      src="/images/enpraxis-logo.png"
      alt="EnPraxis AI"
      class="logo-img"
      width="500"
      height="153"
    />
  </picture>
</div>

<style>
  .logo {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: var(--logo-h);
    width: auto;
    display: block;
  }
</style>
