---
interface Props {
  label: string;
  title: string;
  subtitle?: string;
}

const { label, title, subtitle } = Astro.props;
---

<section class="page-hero">
  <div class="page-hero-bg">
    <div class="page-hero-gradient-1"></div>
    <div class="page-hero-gradient-2"></div>
  </div>
  <div class="page-hero-content container">
    <p class="section-label">{label}</p>
    <h1 class="page-hero-title">{title}</h1>
    {subtitle && <p class="page-hero-subtitle">{subtitle}</p>}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    padding-top: var(--nav-height);
    padding-bottom: 0;
    overflow: hidden;
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .page-hero-gradient-1 {
    position: absolute;
    top: -40%;
    left: -20%;
    width: 80%;
    height: 100%;
    background: radial-gradient(circle, rgba(50, 69, 255, 0.1) 0%, transparent 60%);
  }

  .page-hero-gradient-2 {
    position: absolute;
    bottom: -30%;
    right: -20%;
    width: 70%;
    height: 80%;
    background: radial-gradient(circle, rgba(188, 82, 238, 0.08) 0%, transparent 60%);
  }

  .page-hero-content {
    position: relative;
    z-index: 1;
    padding-block: var(--space-16) var(--space-12);
    max-width: 800px;
  }

  .page-hero-title {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--color-white);
    margin-bottom: var(--space-6);
  }

  .page-hero-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 680px;
  }

  @media (max-width: 768px) {
    .page-hero-content {
      padding-block: var(--space-10) var(--space-8);
    }

    .page-hero-title {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }
  }
</style>
